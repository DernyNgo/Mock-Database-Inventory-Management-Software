<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Java.Controllers.Customers">
   <children>
      <TableView fx:id="customerTableView" layoutX="45.0" layoutY="135.0" prefHeight="318.0" prefWidth="859.0">
        <columns>
          <TableColumn fx:id="customerIDTextField" prefWidth="93.0" text="Customer ID" />
          <TableColumn fx:id="customerNameTextField" prefWidth="162.0" text="Name" />
            <TableColumn fx:id="customerAddressTextField" prefWidth="204.0" text="Address" />
            <TableColumn fx:id="customerStateProvinceText" prefWidth="144.0" text="State / Province" />
            <TableColumn fx:id="customerZipTextField" prefWidth="110.0" text="Postal Code" />
            <TableColumn fx:id="customerPhoneTextField" prefWidth="145.0" text="Phone Number" />
        </columns>
      </TableView>
      <Label layoutX="45.0" layoutY="52.0" text="Customer Scheduler">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="202.0" layoutY="474.0" mnemonicParsing="false" onAction="#addCustomerAction" text="Add Customer" />
      <Button layoutX="408.0" layoutY="474.0" mnemonicParsing="false" onAction="#updateCustomerAction" text="Update Customer" />
      <Button layoutX="629.0" layoutY="474.0" mnemonicParsing="false" onAction="#deleteCustomerAction" text="Delete Customer" />
      <Button layoutX="45.0" layoutY="88.0" mnemonicParsing="false" onAction="#appointmentViewAction" text="Return to Appointment Scheduler" />
   </children>
</AnchorPane>
